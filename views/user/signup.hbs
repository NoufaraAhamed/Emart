<div class="row">
    <div class="loginParentDiv col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h1 class="text-center">Create a new Account</h1>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control input" name="Name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" class="form-control input" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control input" name="Password" placeholder="Password">
                </div>
                <div class="row mt-3">
                    <div class="col-md-10">
                        <a href="/login">Already have account ?</a>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary float-right">Signup</button>
                    </div>

                </div>
            </form>

        </div>

    </div>
</div>